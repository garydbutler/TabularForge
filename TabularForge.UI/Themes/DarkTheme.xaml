<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== DARK THEME (VS Code + Tabular Editor inspired) ===== -->

    <!-- Core Background Colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="PanelBackground" Color="#252530" />
    <SolidColorBrush x:Key="SideBarBackground" Color="#252530" />
    <SolidColorBrush x:Key="EditorBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="TabBarBackground" Color="#2D2D35" />
    <SolidColorBrush x:Key="StatusBarBackground" Color="#00B4D8" />
    <SolidColorBrush x:Key="MenuBarBackground" Color="#2D2D35" />

    <!-- Toolbar with subtle accent gradient -->
    <SolidColorBrush x:Key="ToolBarBackground" Color="#2B2B35" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#D4D4D4" />
    <SolidColorBrush x:Key="SecondaryText" Color="#858585" />
    <SolidColorBrush x:Key="ActiveText" Color="#FFFFFF" />
    <SolidColorBrush x:Key="DisabledText" Color="#5A5A5A" />
    <SolidColorBrush x:Key="ErrorText" Color="#F44747" />
    <SolidColorBrush x:Key="WarningText" Color="#CCA700" />
    <SolidColorBrush x:Key="InfoText" Color="#48B9F0" />

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3C3C4A" />
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#00B4D8" />
    <SolidColorBrush x:Key="SeparatorBrush" Color="#3C3C4A" />

    <!-- Selection / Highlight -->
    <SolidColorBrush x:Key="SelectionBrush" Color="#0A4A6E" />
    <SolidColorBrush x:Key="HoverBrush" Color="#00B4D820" />
    <SolidColorBrush x:Key="ActiveTabBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="InactiveTabBrush" Color="#2D2D35" />
    <SolidColorBrush x:Key="HighlightBrush" Color="#264F78" />
    <SolidColorBrush x:Key="CurrentLineBrush" Color="#282838" />

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#00B4D8" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#48CAE4" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#4EC9B0" />
    <SolidColorBrush x:Key="WarningBrush" Color="#CE9178" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44747" />

    <!-- TreeView Icon Colors -->
    <SolidColorBrush x:Key="ModelIconColor" Color="#DCDCAA" />
    <SolidColorBrush x:Key="TableIconColor" Color="#4EC9B0" />
    <SolidColorBrush x:Key="ColumnIconColor" Color="#9CDCFE" />
    <SolidColorBrush x:Key="CalculatedColumnIconColor" Color="#C586C0" />
    <SolidColorBrush x:Key="MeasureIconColor" Color="#DCDCAA" />
    <SolidColorBrush x:Key="HierarchyIconColor" Color="#CE9178" />
    <SolidColorBrush x:Key="RelationshipIconColor" Color="#569CD6" />
    <SolidColorBrush x:Key="FolderIconColor" Color="#DCB67A" />
    <SolidColorBrush x:Key="PartitionIconColor" Color="#6A9955" />
    <SolidColorBrush x:Key="RoleIconColor" Color="#F44747" />
    <SolidColorBrush x:Key="PerspectiveIconColor" Color="#B5CEA8" />

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ScrollBarThumb" Color="#424250" />
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="#4F4F5F" />

    <!-- Data Grid Alternate Row -->
    <SolidColorBrush x:Key="AlternateRowBackground" Color="#252530" />

    <!-- Input Controls -->
    <SolidColorBrush x:Key="InputBackground" Color="#333340" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="#3C3C4A" />
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#00B4D8" />
    <SolidColorBrush x:Key="InputText" Color="#D4D4D4" />
    <SolidColorBrush x:Key="InputPlaceholderText" Color="#5A5A5A" />

    <!-- Button -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#00839E" />
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#00A0C0" />
    <SolidColorBrush x:Key="ButtonText" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent" />

    <!-- Context Menu / Popup -->
    <SolidColorBrush x:Key="PopupBackground" Color="#252530" />
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#454555" />
    <SolidColorBrush x:Key="MenuItemHoverBrush" Color="#00B4D830" />

    <!-- ===== Global Control Styles ===== -->

    <!-- Window -->
    <Style TargetType="Window" x:Key="DarkWindow">
        <Setter Property="Background" Value="{StaticResource WindowBackground}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
    </Style>

    <!-- TreeView -->
    <Style TargetType="TreeView">
        <Setter Property="Background" Value="{StaticResource SideBarBackground}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style TargetType="TreeViewItem">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="Padding" Value="2,1" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#00B4D830" />
                <Setter Property="Foreground" Value="{StaticResource ActiveText}" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBackground}" />
        <Setter Property="Foreground" Value="{StaticResource InputText}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryText}" />
        <Setter Property="Padding" Value="4,3" />
        <Setter Property="BorderThickness" Value="1" />
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource InputFocusBorderBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Menu -->
    <Style TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource MenuBarBackground}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- ToolBar -->
    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="{StaticResource ToolBarBackground}" />
    </Style>

    <!-- StatusBar -->
    <Style TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource StatusBarBackground}" />
        <Setter Property="Foreground" Value="{StaticResource ActiveText}" />
    </Style>

    <!-- Button -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="6,3" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#00B4D820" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#00B4D840" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource DisabledText}" />
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource PanelBackground}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
    </Style>

    <!-- TabControl -->
    <Style TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource EditorBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource PanelBackground}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="RowBackground" Value="{StaticResource PanelBackground}" />
        <Setter Property="AlternatingRowBackground" Value="{StaticResource EditorBackground}" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}" />
    </Style>

    <!-- Expander -->
    <Style TargetType="Expander">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="Background" Value="{StaticResource PanelBackground}" />
    </Style>

    <!-- GroupBox -->
    <Style TargetType="GroupBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="Background" Value="{StaticResource PanelBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
    </Style>

    <!-- ToolTip -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="{StaticResource PopupBackground}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="BorderBrush" Value="{StaticResource PopupBorderBrush}" />
    </Style>

    <!-- ContextMenu -->
    <Style TargetType="ContextMenu">
        <Setter Property="Background" Value="{StaticResource PopupBackground}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
        <Setter Property="BorderBrush" Value="{StaticResource PopupBorderBrush}" />
    </Style>

    <!-- ScrollViewer -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
    </Style>

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource InputBackground}" />
        <Setter Property="Foreground" Value="{StaticResource InputText}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
    </Style>

</ResourceDictionary>
