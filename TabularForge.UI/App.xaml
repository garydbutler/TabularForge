<Application x:Class="TabularForge.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:TabularForge.UI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default: Dark Theme -->
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <conv:BoolToVisibilityConverter x:Key="BoolToVis" />
            <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
            <conv:InverseBoolConverter x:Key="InverseBool" />
            <conv:NullToVisibilityConverter x:Key="NullToVis" />
            <conv:StepToVisibilityConverter x:Key="StepToVis" />
            <conv:NotLastStepVisibilityConverter x:Key="NotLastStepVis" />
            <conv:LastStepVisibilityConverter x:Key="LastStepVis" />
            <conv:EnumToBoolConverter x:Key="EnumToBool" />
            <conv:ObjectTypeToIconConverter x:Key="TypeToIcon" />
            <conv:ObjectTypeToColorConverter x:Key="TypeToColor" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
