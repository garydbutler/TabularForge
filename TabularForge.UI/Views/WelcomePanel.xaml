<UserControl x:Class="TabularForge.UI.Views.WelcomePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource EditorBackground}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                    MaxWidth="500">

            <!-- Logo / Title -->
            <TextBlock Text="âš’" FontSize="64" HorizontalAlignment="Center"
                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,16" />

            <TextBlock Text="TabularForge" FontSize="36" FontWeight="Light"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryText}" />

            <TextBlock Text="Tabular Model Editor for Power BI &amp; Analysis Services"
                       FontSize="14" HorizontalAlignment="Center"
                       Foreground="{DynamicResource SecondaryText}"
                       Margin="0,8,0,32" />

            <!-- Quick Actions -->
            <Border Background="{DynamicResource PanelBackground}"
                    CornerRadius="8" Padding="24,16"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Get Started" FontSize="16" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryText}"
                               Margin="0,0,0,12" />

                    <Button Command="{Binding OpenFileCommand}" HorizontalAlignment="Left"
                            Padding="12,8" Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‚" FontSize="16" Margin="0,0,8,0" />
                            <StackPanel>
                                <TextBlock Text="Open .bim File" FontSize="13"
                                           Foreground="{DynamicResource AccentBrush}" />
                                <TextBlock Text="Load a Tabular Model Definition file"
                                           FontSize="10.5"
                                           Foreground="{DynamicResource SecondaryText}" />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding NewModelCommand}" HorizontalAlignment="Left"
                            Padding="12,8" Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“„" FontSize="16" Margin="0,0,8,0" />
                            <StackPanel>
                                <TextBlock Text="New Model" FontSize="13"
                                           Foreground="{DynamicResource AccentBrush}" />
                                <TextBlock Text="Create a new Tabular Model from scratch"
                                           FontSize="10.5"
                                           Foreground="{DynamicResource SecondaryText}" />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button IsEnabled="False" HorizontalAlignment="Left"
                            Padding="12,8" Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”Œ" FontSize="16" Margin="0,0,8,0" />
                            <StackPanel>
                                <TextBlock Text="Connect to Server" FontSize="13"
                                           Foreground="{DynamicResource DisabledText}" />
                                <TextBlock Text="Connect to SSAS, Azure AS, or Power BI Premium (Phase 3)"
                                           FontSize="10.5"
                                           Foreground="{DynamicResource DisabledText}" />
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Version -->
            <TextBlock Text="Phase 1 - Foundation MVP | .NET 8 | WPF"
                       FontSize="10.5" HorizontalAlignment="Center"
                       Foreground="{DynamicResource SecondaryText}"
                       Margin="0,16,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
