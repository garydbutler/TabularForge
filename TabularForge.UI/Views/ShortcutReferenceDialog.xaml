<Window x:Class="TabularForge.UI.Views.ShortcutReferenceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Keyboard Shortcut Reference"
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource PrimaryText}">

    <DockPanel Margin="16">
        <TextBlock DockPanel.Dock="Top" Text="Keyboard Shortcut Reference" FontSize="18"
                   FontWeight="SemiBold" Margin="0,0,0,12"
                   Foreground="{DynamicResource PrimaryText}" />

        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" Padding="16,6"
                Margin="0,12,0,0" Click="CloseButton_Click"
                Background="{DynamicResource ButtonBackground}">
            <TextBlock Text="Close" FontSize="12" Foreground="{DynamicResource ButtonText}" />
        </Button>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ShortcutList" />
        </ScrollViewer>
    </DockPanel>
</Window>
