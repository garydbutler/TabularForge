<Window x:Class="TabularForge.UI.Views.DeploymentWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deployment Wizard"
        Height="600" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource PrimaryText}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Step Title -->
        <Border Grid.Row="0" Background="{DynamicResource ToolBarBackground}"
                Padding="12,8" Margin="0,0,0,12">
            <TextBlock Text="{Binding StepTitle}" FontSize="16" FontWeight="SemiBold" />
        </Border>

        <!-- Step Content -->
        <Grid Grid.Row="1">

            <!-- Step 1: Target Server -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepToVis}, ConverterParameter=0}">
                <TextBlock Text="Server Address:" FontWeight="SemiBold" Margin="0,0,0,4" />
                <TextBox Text="{Binding TargetServerAddress, UpdateSourceTrigger=PropertyChanged}"
                         Padding="6,4" FontSize="13" Margin="0,0,0,12" />

                <TextBlock Text="Authentication:" FontWeight="SemiBold" Margin="0,0,0,4" />
                <ComboBox ItemsSource="{Binding AuthenticationTypes}"
                          SelectedItem="{Binding TargetAuthType}"
                          Padding="6,4" Margin="0,0,0,12" />

                <TextBlock Text="Enter the target server where you want to deploy the model."
                           Foreground="{DynamicResource SecondaryText}" TextWrapping="Wrap" />
            </StackPanel>

            <!-- Step 2: Database -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepToVis}, ConverterParameter=1}">
                <TextBlock Text="Target Database Name:" FontWeight="SemiBold" Margin="0,0,0,4" />
                <TextBox Text="{Binding TargetDatabaseName, UpdateSourceTrigger=PropertyChanged}"
                         Padding="6,4" FontSize="13" Margin="0,0,0,12" />

                <CheckBox Content="Create new database if it doesn't exist"
                          IsChecked="{Binding CreateNewDatabase}" Margin="0,0,0,8" />
                <CheckBox Content="Overwrite existing database"
                          IsChecked="{Binding OverwriteExisting}" />
            </StackPanel>

            <!-- Step 3: Options -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepToVis}, ConverterParameter=2}">
                <TextBlock Text="Deployment Mode:" FontWeight="SemiBold" Margin="0,0,0,8" />
                <RadioButton Content="Metadata Only - Deploy model structure without data"
                             IsChecked="{Binding DeploymentMode, Converter={StaticResource EnumToBool}, ConverterParameter=MetadataOnly}"
                             Margin="0,0,0,6" />
                <RadioButton Content="Metadata + Data - Deploy structure and refresh all data"
                             IsChecked="{Binding DeploymentMode, Converter={StaticResource EnumToBool}, ConverterParameter=MetadataAndData}"
                             Margin="0,0,0,6" />
                <RadioButton Content="Data Only - Refresh data on existing model"
                             IsChecked="{Binding DeploymentMode, Converter={StaticResource EnumToBool}, ConverterParameter=DataOnly}" />
            </StackPanel>

            <!-- Step 4: Validation -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepToVis}, ConverterParameter=3}">
                <TextBlock Text="Validation Results" FontWeight="SemiBold" Margin="0,0,0,8" />

                <ItemsControl ItemsSource="{Binding ValidationErrors}" Margin="0,0,0,8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="X" Foreground="Red" FontWeight="Bold" Margin="0,0,6,0" />
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding ValidationWarnings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="!" Foreground="Orange" FontWeight="Bold" Margin="0,0,6,0" />
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Validation passed!" Foreground="Green" FontWeight="SemiBold"
                           Margin="0,12,0,0"
                           Visibility="{Binding IsValidated, Converter={StaticResource BoolToVis}}" />
            </StackPanel>

            <!-- Step 5: Script Preview -->
            <Grid Visibility="{Binding CurrentStep, Converter={StaticResource StepToVis}, ConverterParameter=4}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="TMSL Script Preview:" FontWeight="SemiBold" Margin="0,0,0,4" />
                <TextBox Grid.Row="1" Text="{Binding TmslScript, Mode=OneWay}"
                         IsReadOnly="True" AcceptsReturn="True"
                         FontFamily="Cascadia Code, Consolas, Courier New" FontSize="11"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         TextWrapping="NoWrap" Background="{DynamicResource EditorBackground}" />
            </Grid>

            <!-- Step 6: Deploy -->
            <Grid Visibility="{Binding CurrentStep, Converter={StaticResource StepToVis}, ConverterParameter=5}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{Binding DeploymentStatus}" FontSize="14"
                           FontWeight="SemiBold" Margin="0,0,0,8" />

                <ProgressBar Grid.Row="1" IsIndeterminate="{Binding IsDeploying}"
                             Height="20" Margin="0,0,0,12" />

                <ListBox Grid.Row="2" ItemsSource="{Binding DeploymentLog}"
                         FontFamily="Cascadia Code, Consolas" FontSize="11"
                         Background="{DynamicResource EditorBackground}" />
            </Grid>
        </Grid>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Back" Command="{Binding PreviousStepCommand}"
                    Padding="16,8" Margin="0,0,8,0" />
            <Button Content="Next" Command="{Binding NextStepCommand}"
                    Padding="16,8" Margin="0,0,8,0"
                    Visibility="{Binding CurrentStep, Converter={StaticResource NotLastStepVis}}" />
            <Button Content="Deploy" Command="{Binding DeployCommand}"
                    Padding="16,8" Margin="0,0,8,0"
                    Visibility="{Binding CurrentStep, Converter={StaticResource LastStepVis}}"
                    IsEnabled="{Binding IsDeploying, Converter={StaticResource InverseBool}}" />
            <Button Content="Close" Padding="16,8" IsCancel="True"
                    Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
