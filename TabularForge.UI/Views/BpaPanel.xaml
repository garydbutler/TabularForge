<UserControl x:Class="TabularForge.UI.Views.BpaPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TabularForge.UI.ViewModels"
             d:DataContext="{d:DesignInstance vm:BpaViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource EditorBackground}"
             Foreground="{DynamicResource PrimaryText}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource ToolBarBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="4,2">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding RunScanCommand}" ToolTip="Run Analysis"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="â–¶ Scan" FontSize="12" Foreground="#4EC94E" />
                </Button>
                <Button Command="{Binding FixAllAutoFixableCommand}" ToolTip="Fix All Auto-Fixable"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Fix All" FontSize="12" />
                </Button>

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <Button Command="{Binding OpenRuleEditorCommand}" ToolTip="Add Custom Rule"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="+ Rule" FontSize="12" />
                </Button>
                <Button Command="{Binding ExportRulesCommand}" ToolTip="Export Rules"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Export" FontSize="12" />
                </Button>
                <Button Command="{Binding ImportRulesCommand}" ToolTip="Import Rules"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Import" FontSize="12" />
                </Button>

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <CheckBox Content="Scan on Save" IsChecked="{Binding ScanOnSave}"
                          Foreground="{DynamicResource PrimaryText}" Margin="4,0"
                          VerticalContentAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="{DynamicResource PanelHeaderBackground}"
                Padding="8,4">
            <DockPanel>
                <!-- Severity filters -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding ShowErrors}" Margin="0,0,8,0"
                              VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="#E84040" Margin="0,0,4,0" />
                            <TextBlock Foreground="{DynamicResource PrimaryText}">
                                <Run Text="Errors: " /><Run Text="{Binding ErrorCount, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding ShowWarnings}" Margin="0,0,8,0"
                              VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="#D4A017" Margin="0,0,4,0" />
                            <TextBlock Foreground="{DynamicResource PrimaryText}">
                                <Run Text="Warnings: " /><Run Text="{Binding WarningCount, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding ShowInfo}" Margin="0,0,8,0"
                              VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="#4A90D9" Margin="0,0,4,0" />
                            <TextBlock Foreground="{DynamicResource PrimaryText}">
                                <Run Text="Info: " /><Run Text="{Binding InfoCount, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                    </CheckBox>
                </StackPanel>

                <!-- Search -->
                <TextBox DockPanel.Dock="Right" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Width="200" Margin="8,0,0,0"
                         Background="{DynamicResource EditorBackground}"
                         Foreground="{DynamicResource PrimaryText}"
                         BorderBrush="{DynamicResource BorderBrush}" />
                <TextBlock DockPanel.Dock="Right" Text="Filter:" VerticalAlignment="Center"
                           Foreground="{DynamicResource SecondaryText}" Margin="8,0,4,0" />
            </DockPanel>
        </Border>

        <!-- Violations List -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredViolations}"
                  SelectedItem="{Binding SelectedViolation}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" CanUserReorderColumns="True"
                  GridLinesVisibility="Horizontal"
                  Background="{DynamicResource EditorBackground}"
                  Foreground="{DynamicResource PrimaryText}"
                  RowBackground="{DynamicResource EditorBackground}"
                  AlternatingRowBackground="{DynamicResource PanelHeaderBackground}"
                  BorderThickness="0" Padding="0">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="28">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="12" Height="12" VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#4A90D9" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Severity}" Value="Error">
                                                <Setter Property="Fill" Value="#E84040" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Severity}" Value="Warning">
                                                <Setter Property="Fill" Value="#D4A017" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80" />
                <DataGridTextColumn Header="Rule" Binding="{Binding RuleName}" Width="250" />
                <DataGridTextColumn Header="Object" Binding="{Binding ObjectName}" Width="200" />
                <DataGridTextColumn Header="Type" Binding="{Binding ObjectType}" Width="120" />
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="120" />
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
                <DataGridTemplateColumn Header="Fix" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.FixViolationCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Fix" Padding="4,1"
                                    Visibility="{Binding IsAutoFixable, Converter={StaticResource BoolToVis}}"
                                    FontSize="10" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Splitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch"
                      Background="{DynamicResource BorderBrush}" />

        <!-- Rules Panel -->
        <Border Grid.Row="4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{DynamicResource PanelHeaderBackground}" Padding="8,4">
                    <TextBlock Text="Rules" FontWeight="SemiBold" FontSize="11" />
                </Border>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Rules}"
                          SelectedItem="{Binding SelectedRule}"
                          AutoGenerateColumns="False"
                          SelectionMode="Single"
                          Background="{DynamicResource EditorBackground}"
                          Foreground="{DynamicResource PrimaryText}"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="" Binding="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged}" Width="30" />
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="180" IsReadOnly="True" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250" IsReadOnly="True" />
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80" IsReadOnly="True" />
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120" IsReadOnly="True" />
                        <DataGridTextColumn Header="Applies To" Binding="{Binding AppliesTo}" Width="200" IsReadOnly="True" />
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="5" Background="{DynamicResource StatusBarBackground}" Padding="8,3">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding StatusText}"
                           Foreground="White" FontSize="11" />
                <TextBlock DockPanel.Dock="Right"
                           Foreground="#A0A0A0" FontSize="11" HorizontalAlignment="Right">
                    <Run Text="Total: " /><Run Text="{Binding TotalViolations, Mode=OneWay}" />
                    <Run Text=" | Rules: " /><Run Text="{Binding Rules.Count, Mode=OneWay}" />
                </TextBlock>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
