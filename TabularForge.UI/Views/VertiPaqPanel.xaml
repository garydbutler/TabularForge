<UserControl x:Class="TabularForge.UI.Views.VertiPaqPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:TabularForge.UI.Converters"
             Background="{DynamicResource EditorBackground}"
             Foreground="{DynamicResource PrimaryText}">

    <UserControl.Resources>
        <conv:SeverityToColorConverter x:Key="SeverityToColor" />
        <conv:SeverityToIconConverter x:Key="SeverityToIcon" />
        <conv:PercentToWidthConverter x:Key="PercentToWidth" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource ToolBarBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="4,2">
            <StackPanel Orientation="Horizontal">
                <Button Content="Collect Statistics" Command="{Binding CollectStatisticsCommand}"
                        Padding="8,4" Margin="2,0" FontSize="12" />
                <Button Content="Cancel" Command="{Binding CancelCollectionCommand}"
                        Padding="8,4" Margin="2,0" FontSize="12"
                        IsEnabled="{Binding IsCollecting}" />
                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <!-- View Tabs -->
                <RadioButton Content="Tables" GroupName="VPView" IsChecked="True"
                             Margin="4,0" Padding="6,3" FontSize="11"
                             Command="{Binding SwitchViewCommand}" CommandParameter="Tables" />
                <RadioButton Content="Columns" GroupName="VPView"
                             Margin="4,0" Padding="6,3" FontSize="11"
                             Command="{Binding SwitchViewCommand}" CommandParameter="Columns" />
                <RadioButton Content="Relationships" GroupName="VPView"
                             Margin="4,0" Padding="6,3" FontSize="11"
                             Command="{Binding SwitchViewCommand}" CommandParameter="Relationships" />
                <RadioButton Content="Treemap" GroupName="VPView"
                             Margin="4,0" Padding="6,3" FontSize="11"
                             Command="{Binding SwitchViewCommand}" CommandParameter="Treemap" />
                <RadioButton Content="Recommendations" GroupName="VPView"
                             Margin="4,0" Padding="6,3" FontSize="11"
                             Command="{Binding SwitchViewCommand}" CommandParameter="Recommendations" />

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <!-- Snapshots -->
                <Button Content="Save Snapshot" Command="{Binding SaveSnapshotCommand}"
                        Padding="8,4" Margin="2,0" FontSize="12" />
                <ComboBox ItemsSource="{Binding Snapshots}" SelectedItem="{Binding SelectedSnapshot}"
                          DisplayMemberPath="Name" Width="140" FontSize="11" Margin="4,0" />
                <Button Content="Load" Command="{Binding LoadSnapshotCommand}"
                        CommandParameter="{Binding SelectedSnapshot}"
                        Padding="8,4" Margin="2,0" FontSize="12" />

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <Button Content="Export Tables CSV" Command="{Binding ExportTableStatsCommand}"
                        Padding="8,4" Margin="2,0" FontSize="12" />
                <Button Content="Export Columns CSV" Command="{Binding ExportColumnStatsCommand}"
                        Padding="8,4" Margin="2,0" FontSize="12" />
            </StackPanel>
        </Border>

        <!-- Model Summary -->
        <Border Grid.Row="1" Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="8,6"
                Visibility="{Binding HasStats, Converter={StaticResource BoolToVis}}">
            <WrapPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,24,0">
                    <TextBlock Text="Model" FontSize="10" Foreground="{DynamicResource SecondaryText}" />
                    <TextBlock Text="{Binding ModelName}" FontSize="13" FontWeight="Bold" />
                </StackPanel>
                <StackPanel Margin="0,0,24,0">
                    <TextBlock Text="Total Size" FontSize="10" Foreground="{DynamicResource SecondaryText}" />
                    <TextBlock Text="{Binding TotalSize}" FontSize="13" FontWeight="Bold" Foreground="#4A90D9" />
                </StackPanel>
                <StackPanel Margin="0,0,24,0">
                    <TextBlock Text="Tables" FontSize="10" Foreground="{DynamicResource SecondaryText}" />
                    <TextBlock Text="{Binding TableCount}" FontSize="13" FontWeight="Bold" />
                </StackPanel>
                <StackPanel Margin="0,0,24,0">
                    <TextBlock Text="Columns" FontSize="10" Foreground="{DynamicResource SecondaryText}" />
                    <TextBlock Text="{Binding ColumnCount}" FontSize="13" FontWeight="Bold" />
                </StackPanel>
                <StackPanel Margin="0,0,24,0">
                    <TextBlock Text="Relationships" FontSize="10" Foreground="{DynamicResource SecondaryText}" />
                    <TextBlock Text="{Binding RelationshipCount}" FontSize="13" FontWeight="Bold" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Collected" FontSize="10" Foreground="{DynamicResource SecondaryText}" />
                    <TextBlock Text="{Binding CollectedAt}" FontSize="11" />
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Main Content (switched by SelectedView) -->
        <Grid Grid.Row="2">

            <!-- Tables View -->
            <Grid Visibility="{Binding SelectedView, Converter={StaticResource NullToVis}}">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedView}" Value="Tables">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <DataGrid ItemsSource="{Binding TableStats}"
                          SelectedItem="{Binding SelectedTable}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          Background="{DynamicResource EditorBackground}"
                          Foreground="{DynamicResource PrimaryText}"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          FontSize="12"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Table" Binding="{Binding TableName}" Width="180" />
                        <DataGridTextColumn Header="Rows" Binding="{Binding RowCount, StringFormat='{}{0:N0}'}" Width="100" />
                        <DataGridTextColumn Header="Total Size" Binding="{Binding TotalSizeFormatted}" Width="100" />
                        <DataGridTextColumn Header="Data Size" Binding="{Binding DataSizeFormatted}" Width="100" />
                        <DataGridTextColumn Header="Dictionary" Binding="{Binding DictionarySizeFormatted}" Width="100" />
                        <DataGridTextColumn Header="Columns" Binding="{Binding ColumnCount}" Width="70" />
                        <DataGridTemplateColumn Header="% of Model" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding PercentOfModel, Mode=OneWay}"
                                                     Maximum="100" Height="14"
                                                     Foreground="#4A90D9" Background="#333337" />
                                        <TextBlock Text="{Binding PercentOfModel, StringFormat='{}{0:F1}%'}"
                                                   HorizontalAlignment="Center" FontSize="10"
                                                   Foreground="White" />
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Columns View (shows columns of selected table) -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedView}" Value="Columns">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8,4">
                    <TextBlock Text="Table: " FontSize="12" VerticalAlignment="Center" />
                    <ComboBox ItemsSource="{Binding TableStats}" SelectedItem="{Binding SelectedTable}"
                              DisplayMemberPath="TableName" Width="200" FontSize="11" />
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding SelectedTableColumns}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          Background="{DynamicResource EditorBackground}"
                          Foreground="{DynamicResource PrimaryText}"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Column" Binding="{Binding ColumnName}" Width="180" />
                        <DataGridTextColumn Header="Data Type" Binding="{Binding DataType}" Width="90" />
                        <DataGridTextColumn Header="Encoding" Binding="{Binding Encoding}" Width="80" />
                        <DataGridTextColumn Header="Cardinality" Binding="{Binding Cardinality, StringFormat='{}{0:N0}'}" Width="100" />
                        <DataGridTextColumn Header="Total Size" Binding="{Binding TotalSizeFormatted}" Width="90" />
                        <DataGridTextColumn Header="Data Size" Binding="{Binding DataSizeFormatted}" Width="90" />
                        <DataGridTextColumn Header="Dictionary" Binding="{Binding DictionarySizeFormatted}" Width="90" />
                        <DataGridTemplateColumn Header="% of Table" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding PercentOfTable, Mode=OneWay}"
                                                     Maximum="100" Height="14"
                                                     Foreground="#E8854A" Background="#333337" />
                                        <TextBlock Text="{Binding PercentOfTable, StringFormat='{}{0:F1}%'}"
                                                   HorizontalAlignment="Center" FontSize="10"
                                                   Foreground="White" />
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Relationships View -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedView}" Value="Relationships">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <DataGrid ItemsSource="{Binding RelationshipStats}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          Background="{DynamicResource EditorBackground}"
                          Foreground="{DynamicResource PrimaryText}"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="From Table" Binding="{Binding FromTable}" Width="150" />
                        <DataGridTextColumn Header="From Column" Binding="{Binding FromColumn}" Width="120" />
                        <DataGridTextColumn Header="To Table" Binding="{Binding ToTable}" Width="150" />
                        <DataGridTextColumn Header="To Column" Binding="{Binding ToColumn}" Width="120" />
                        <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="80" />
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Treemap View -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedView}" Value="Treemap">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <ItemsControl x:Name="TreemapControl" ItemsSource="{Binding TreemapItems}" Margin="8">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="2" CornerRadius="3" Padding="8,6"
                                    MinWidth="80" MinHeight="50"
                                    Width="{Binding PercentOfTotal, Converter={StaticResource PercentToWidth}, ConverterParameter=600}"
                                    ToolTip="{Binding SizeFormatted}">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}" />
                                </Border.Background>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="11"
                                               Foreground="White" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding SizeFormatted}" FontSize="10"
                                               Foreground="#CCCCCC" />
                                    <TextBlock Text="{Binding PercentOfTotal, StringFormat='{}{0:F1}%'}"
                                               FontSize="9" Foreground="#AAAAAA" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- Recommendations View -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedView}" Value="Recommendations">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <ListView ItemsSource="{Binding Recommendations}"
                          Background="{DynamicResource EditorBackground}"
                          Foreground="{DynamicResource PrimaryText}"
                          BorderThickness="0" FontSize="12">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{Binding Severity, Converter={StaticResource SeverityToColor}}"
                                    BorderThickness="3,0,0,0" Margin="0,2" Padding="12,8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="{Binding Severity}" FontWeight="Bold"
                                                   Foreground="{Binding Severity, Converter={StaticResource SeverityToColor}}"
                                                   Margin="0,0,8,0" />
                                        <TextBlock Text="{Binding Category}" Foreground="{DynamicResource SecondaryText}"
                                                   Margin="0,0,8,0" />
                                        <TextBlock Text="{Binding ObjectName}" FontWeight="SemiBold" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap"
                                               Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding Recommendation}" TextWrapping="Wrap"
                                               Foreground="#5CB85C" FontStyle="Italic" />
                                    <TextBlock Text="{Binding PotentialSavingsFormatted}"
                                               Foreground="#F0AD4E" FontSize="11"
                                               Visibility="{Binding PotentialSavingsFormatted, Converter={StaticResource NullToVis}}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- No data placeholder -->
            <TextBlock Text="Connect to a server and click 'Collect Statistics' to analyze the model."
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="14" Opacity="0.5"
                       Visibility="{Binding HasStats, Converter={StaticResource InverseBoolToVis}}" />
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource StatusBarBackground}" Padding="6,3">
            <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="11" />
        </Border>
    </Grid>
</UserControl>
