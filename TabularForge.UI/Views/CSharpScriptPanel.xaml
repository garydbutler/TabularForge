<UserControl x:Class="TabularForge.UI.Views.CSharpScriptPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:vm="clr-namespace:TabularForge.UI.ViewModels"
             d:DataContext="{d:DesignInstance vm:ScriptEditorViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource EditorBackground}"
             Foreground="{DynamicResource PrimaryText}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource ToolBarBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="4,2">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ExecuteScriptCommand}" ToolTip="Run Script (F5)"
                        Padding="6,4" Margin="1,0" IsEnabled="{Binding IsExecuting, Converter={StaticResource InverseBool}}">
                    <TextBlock Text="▶ Run" FontSize="12" Foreground="#4EC94E" />
                </Button>
                <Button Command="{Binding CancelExecutionCommand}" ToolTip="Cancel Execution"
                        Padding="6,4" Margin="1,0" IsEnabled="{Binding IsExecuting}">
                    <TextBlock Text="■ Stop" FontSize="12" Foreground="#E84040" />
                </Button>

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <Button Command="{Binding NewScriptCommand}" ToolTip="New Script"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="New" FontSize="12" />
                </Button>
                <Button Command="{Binding ClearOutputCommand}" ToolTip="Clear Output"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Clear" FontSize="12" />
                </Button>

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <Button Command="{Binding SaveAsMacroCommand}" ToolTip="Save as Macro"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Save Macro" FontSize="12" />
                </Button>
                <Button Command="{Binding ToggleRecordingCommand}" ToolTip="Toggle Macro Recording"
                        Padding="6,4" Margin="1,0">
                    <TextBlock FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="⏺ Record" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                        <Setter Property="Text" Value="⏹ Stop Rec" />
                                        <Setter Property="Foreground" Value="#E84040" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <!-- Snippets dropdown -->
                <ComboBox ItemsSource="{Binding Snippets}" SelectedItem="{Binding SelectedSnippet}"
                          DisplayMemberPath="Name" Width="160" Margin="2,0"
                          ToolTip="Insert Snippet" />
                <Button Command="{Binding InsertSnippetCommand}"
                        CommandParameter="{Binding SelectedSnippet}"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Insert" FontSize="12" />
                </Button>

                <Border Width="1" Background="{DynamicResource SeparatorBrush}" Margin="6,2" />

                <!-- Macros dropdown -->
                <ComboBox ItemsSource="{Binding Macros}" SelectedItem="{Binding SelectedMacro}"
                          DisplayMemberPath="Name" Width="160" Margin="2,0"
                          ToolTip="Select Macro" />
                <Button Command="{Binding LoadMacroCommand}"
                        CommandParameter="{Binding SelectedMacro}"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Load" FontSize="12" />
                </Button>
                <Button Command="{Binding RunMacroCommand}"
                        CommandParameter="{Binding SelectedMacro}"
                        Padding="6,4" Margin="1,0">
                    <TextBlock Text="Run" FontSize="12" />
                </Button>
            </StackPanel>
        </Border>

        <!-- Script Editor -->
        <avalonedit:TextEditor x:Name="ScriptEditor" Grid.Row="1"
                               FontFamily="Cascadia Code, Consolas, Courier New"
                               FontSize="13"
                               ShowLineNumbers="True"
                               SyntaxHighlighting="C#"
                               Background="{DynamicResource EditorBackground}"
                               Foreground="{DynamicResource PrimaryText}"
                               LineNumbersForeground="#808080"
                               Padding="4" />

        <!-- Splitter -->
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch"
                      Background="{DynamicResource BorderBrush}" />

        <!-- Output Panel -->
        <Border Grid.Row="3" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{DynamicResource PanelHeaderBackground}" Padding="8,4">
                    <TextBlock Text="Output" FontWeight="SemiBold" FontSize="11" />
                </Border>

                <TextBox Grid.Row="1" Text="{Binding OutputText, Mode=OneWay}"
                         IsReadOnly="True" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Cascadia Code, Consolas, Courier New"
                         FontSize="12"
                         Background="{DynamicResource EditorBackground}"
                         Foreground="#CCCCCC" BorderThickness="0"
                         Padding="8,4" />
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource StatusBarBackground}" Padding="8,3">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding StatusText}"
                           Foreground="White" FontSize="11" />
                <TextBlock DockPanel.Dock="Right" Text="{Binding ExecutionTime}"
                           Foreground="#A0A0A0" FontSize="11" HorizontalAlignment="Right" />

                <!-- Diagnostics count -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Foreground="#E84040" FontSize="11" Margin="16,0,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Errors: {0}">
                                <Binding Path="Diagnostics.Count" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
